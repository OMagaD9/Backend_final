<%- include('navbar') %>
<div class="container">
    <h1 class="center"><%=__("main")%></h1>
    <% items.forEach(item => { %>
        <div class="item center">
            <h2>
                <% if (lang === 'ru') { %>
                    <%= item.nameRus %>
                <% } else { %>
                    <%= item.nameEn %>
                <% } %>
            </h2>
            <div id="carousel<%= item._id %>" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="<%= item.imageURL1 %>" class="d-block w-100" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img src="<%= item.imageURL2 %>" class="d-block w-100" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img src="<%= item.imageURL3 %>" class="d-block w-100" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel<%= item._id %>" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel<%= item._id %>" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <p>
                <% if (lang === 'ru') { %>
                    <%= item.descriptionRus %>
                <% } else { %>
                    <%= item.descriptionEn %>
                <% } %>
            </p>
        </div>
    <% }); %>
</div>
<%- include('footer') %>